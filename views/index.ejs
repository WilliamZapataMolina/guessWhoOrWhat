<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guess Who or guess What</title>
    <link rel="stylesheet" href="thirdparty/bootstrap-5.3.3-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/index.css">

</head>

<body>
   <%- include('parts/navbar', { user, showAuthLinks: false }) %>

    <main>
        <form id="authForm">
  <h2>Iniciar Sesión o Registrarse</h2>
  <input type="email" id="authEmail" name="email" required placeholder="Email">
  <input type="password" id="authPassword" name="password" required placeholder="Contraseña">
  <div id="authErrors" style="color: red; margin-top: 10px;"></div>

  <button type="button" id="loginBtn">Iniciar Sesión</button>
  <button type="button" id="registerBtn">Registrarse</button>
</form>
    </main>

     <%- include('parts/footer', { user: user }) %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="thirdparty/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
   <script src="/js/login.js"></script>
   
</body>
</html>